 <% provide :title , "Forgot password"  %> 
 <%= stylesheet_link_tag 'sessions.css', media: 'all', 'data-turbolinks-track': 'reload' %>
<div class="container-fluid"> 
 <div class="row-fluid"> 
  <div class="col-md-offset-6 col-md-6" id="box" > 
   <h2>Enter your email</h2> 
   <hr> 
    <%= render  "shared/flash_msg" %>
   <%= form_for :password_reset, url: password_resets_path do|f|%> 
        
         <fieldset> 
     <div class="form-group"> 
      <div class="col-md-12"> 
       <div class="input-group"> <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span> 
            
            <%= f.email_field :email, class: "form-control text-input-login",placeholder:"Your email",required:'true' %>
       </div> 
      </div> 
     </div> 
     
   
     <div class="form-group"> 
      <div class="col-md-12"> 
        <%= f.submit "Submit", class:"btn btn-md btn-danger pull-right" %>
      </div> 
     </div> 

      <div class="text-center p-t-45 p-b-4">

<br/>    
<br/>   

    </fieldset> 


   <% end %>

  </div> 
 </div>
</div>