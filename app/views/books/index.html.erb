<%= stylesheet_link_tag 'custom', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= render "shared/header-area"  %> 
<div class="breadcrumb-area"> 
    <div class="container">
        <div class="row">
                <div class="col-12">
                    <%= image_tag  "breadcrumb-line.png",style:"height: auto;max-width: 100%;" %>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#"><i class="fa fa-home"></i> Home</a></li>
                            <li class="breadcrumb-item"><a href="#">Blog List</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Blog Single</li>
                        </ol>
                    </nav>
                </div>
            </div>

    </div>
    <div class="container" style="margin-top: 7%;">
         <div class="row">
                <div class="col-sm-6">
                    <button type="button" class="btn btn-primary"  style="width: 50%;">Add New Book</button>
                </div>
                <div class="col-sm-6">
                   <form class="form-inline">
                    <div class="form-group mb-2">
                        <label for="staticEmail2">Welcom <%= get_name %> </label>
                    </div>
                    <div class="form-group mx-sm-3 mb-2">
                        <label for="inputPassword2" class="sr-only">Password</label>
                        <input type="text" class="form-control" id="inputPassword2" placeholder="Type Here">
                    </div>
                    <button type="submit" class="btn btn-primary mb-2">Search</button>
                    </form>
                </div>
            </div>
    </div>

<div class="col-12">
    <h2 style="text-align: center;margin-top: 3%;margin-bottom: 2%;">All Books </h2>
  <section class="blog-content-area section-padding-0-100">
        <div class="container">
            <div class="row justify-content-center">
                <!-- Blog Posts Area -->
                <div class="col-12">
                    <div class="blog-posts-area">

                        <!-- Post Details Area -->
<% if @books.any? %> 
                       <table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Book Name</th>
      <th scope="col">Author</th>
      <th scope="col">Publish Date</th>
      <th scope="col">Rating</th>
      <th scope="col">User</th>
      <th scope="col">Status</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |item|  %> 
    <tr>
      <th scope="row">1</th>
      <td><%= item.book_name  %> </td>
      <td><%= item.author  %></td>
      <td><%= item.publish_date.to_date  %></td>
      <td><%= item.rating  %></td>
      <td><%= item.user.user_name  %></td>
      <td>
            <% if item.status == 0 %> 
                <div class="alert alert-danger" role="alert" style= "text-align: center;">
                    Pending
                </div>
            <% else  %>
                <div class="alert alert-success" role="alert" style= "text-align: center;">
                    Success
                </div> 
            <% end  %> 
      </td>
      <td>
            <%= link_to  "View", book_path(item) ,class: "btn btn-outline-info",id:"btn-form-admin" %> 
            <%= link_to  "Accept", accept_path(item),class: "btn btn-outline-primary",id:"btn-form-admin", method: :post %>         
      </td>
   
    </tr>
     <% end  %> 
     <%= will_paginate @books,params: { controller: :books, action: :index }%>
  </tbody>
  </div>
</table>

<% end %> 
                    </div>
                </div>

                <!-- Blog Sidebar Area -->
                
            </div>
        </div>
    </section>

</div>
<%= render "shared/instagram"  %> 

<%= render "shared/footer-area"  %>

<%= render "shared/footer-script"  %>


 
